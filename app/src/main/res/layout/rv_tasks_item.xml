<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/shape_task_item"
    android:paddingHorizontal="16dp"
    android:paddingVertical="20dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:textColor="@color/dark"
            android:fontFamily="@font/stolzl_regular"
            android:textSize="14sp"
            android:text="Мебель"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/nameTask"
            android:textColor="@color/dark"
            android:fontFamily="@font/stolzl_book"
            android:textSize="12sp"
            android:text="Текущее задание"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="4dp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/stolzl_book"
        android:textSize="14sp"
        android:text="11.08.2023 * 12:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_marginTop="12dp"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:paddingVertical="8dp"
        android:background="@drawable/shape_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/dark"
            android:fontFamily="@font/stolzl_book"
            android:textSize="14sp"
            android:text="Склад 51, Ул. Пушкина 124Б"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="8dp"
            android:textColor="@color/dark"
            android:fontFamily="@font/stolzl_book"
            android:textSize="14sp"
            android:text="Склад 38, Ул. Розенбаума 89"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:textColor="@color/bia_gray_color_1"
        android:fontFamily="@font/stolzl_book"
        android:textSize="12sp"
        android:text="@string/order_details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="4dp"
        android:textColor="@color/dark"
        android:fontFamily="@font/stolzl_book"
        android:textSize="14sp"
        android:text="Прописанные детали заказа"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="12dp"
        android:textColor="@color/bia_gray_color_1"
        android:fontFamily="@font/stolzl_book"
        android:textSize="12sp"
        android:text="@string/payment_parameters_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="4dp"
        android:textColor="@color/dark"
        android:fontFamily="@font/stolzl_book"
        android:textSize="14sp"
        android:text="Прописанные параметры по оплате"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:layout_marginTop="12dp"
        android:id="@+id/btnShowDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/dark"
        android:text="@string/btn_show_details_text"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:shapeAppearanceOverlay="@style/shape_btn_continue" />
</LinearLayout>